<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/study_des_empty_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/now_no_test_word"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_font" />

    <LinearLayout
        android:id="@+id/study_data_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/study_listview"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:layoutAnimation="@anim/list_layout_animation"
            android:background="@color/page_about_background"
            android:cacheColorHint="@color/page_about_background"
            android:divider="@null" >
        </ListView>

        <TextView
            android:visibility="gone"
            android:id="@+id/show_or_hide_corrent_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/page_main_start_left"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/show_hide_corrent_test"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

</FrameLayout>