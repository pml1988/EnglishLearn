<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.android.english.learn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/main_top_layout"  android:id="@+id/main_top_rl"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.android.english.learn.widget.Chooser
            android:id="@+id/chooser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black" >

            <TextView
                android:id="@+id/main_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_color="@color/common_green"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font" />

            <TextView
                android:id="@+id/main_person_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_color="@color/common_green"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/study"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font" />
        </com.android.english.learn.widget.Chooser>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>