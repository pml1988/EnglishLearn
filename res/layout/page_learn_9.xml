<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_learn_sentence"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/page_about_border_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/page_main_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:text="@string/page_learn_sentence"
            android:textColor="@color/black" />

        <ImageView
            android:id="@id/page_main_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/page_learn_divider_1" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            layout="@layout/page_learn_1" />
    </LinearLayout>

</LinearLayout>