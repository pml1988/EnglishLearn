<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_about_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="0.0"
        android:background="@drawable/page_note_background"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <EditText
            android:id="@+id/page_words_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1.0"
            android:background="@drawable/page_note_input_background"
            android:digits="abcdefghigklmnopqrstuvwxyz "
            android:ems="10"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:textSize="@dimen/sp_15" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <ListView
        android:id="@+id/page_words_words_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@color/page_about_background"
        android:cacheColorHint="@color/page_about_background"
        android:divider="@null" />

    <LinearLayout
        android:id="@+id/page_learn_operation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/page_test"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1.0"
            android:background="@drawable/page_lock_screen_yes"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/page_main_test"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/page_learn_next"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1.0"
            android:background="@drawable/page_lock_screen_yes"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/page_main_start"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>